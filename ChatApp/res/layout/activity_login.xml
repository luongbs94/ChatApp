<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/chatapp" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Login to your account"
        android:textColor="#575757"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/login_username_field"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/username_field"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:background="#FFFFFF"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:textColor="#575757"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_password_field"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/password_field"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:background="#FFFFFF"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#575757"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_login_and_checkbox_layout"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/login_login_button"
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:layout_marginRight="5sp"
            android:layout_weight="1"  
            android:background="@drawable/background1"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          
            android:gravity="center"            
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/login_checkbox_group"
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:weightSum="2" >

            <CheckBox
                android:id="@+id/login_remember_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="Remember me"
                android:textColor="#575757"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/login_keep_logged_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="1sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="Keep logged in"
                android:textColor="#575757"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    
    
    <TextView
        android:id="@+id/login_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="SignUp"
        android:textColor="#9900CC"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/login_fogot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Forgot your your password ? "
        android:textColor="#888888"
        android:textSize="14sp" />

</LinearLayout>