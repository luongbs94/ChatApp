<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/signup_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/chatapp" />

    <TextView
        android:id="@+id/signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Creat an account"
        android:textColor="#575757"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/signup_username_field"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/username_field"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/signup_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:background="#FFFFFF"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:textColor="#575757"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signup_password_field"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/password_field"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:background="#FFFFFF"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#575757"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signup_password_confirm_field"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/password_field"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/signup_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:background="#FFFFFF"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:textColor="#575757"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signup_signup_and_signup_layout"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/signup_signup_button"
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:background="@drawable/background1"
            android:gravity="center"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/signup_signin_button"
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_weight="1"
            android:background="@drawable/background1"
            android:gravity="center"
            android:text="Sign in"
            android:textColor="#00CC33"
            android:textSize="17sp" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/signup_fogot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Forgot your your password ? "
        android:textColor="#888888"
        android:textSize="14sp" />

</LinearLayout>