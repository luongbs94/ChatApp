            android:name="uet.chatapp.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="uet.chatapp.services.IMService" >
        </service>

        <activity android:name="uet.chatapp.activity.SignUpActivity" >
        </activity>
        <activity android:name="uet.chatapp.activity.MainScreenActivity" >
        </activity>
        <activity android:name="uet.chatapp.activity.MessageBoxActivity" >
        </activity>
        <activity android:name="uet.chatapp.activity.UnApprovedFriendList" >
        </activity>
    </application>

</manifest>